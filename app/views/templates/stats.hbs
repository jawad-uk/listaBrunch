{{#if stats.total}}
  <span class="todo-count">
    باقي
    <span class="number">{{stats.remaining}}</span>
    <span class="word">
       {{#pluralize stats.remaining}}{{/pluralize}} 
    </span>
    
  </span>
{{/if}}

{{#if stats.done}}
  <a class="todo-clear topcoat-notification">
    Clear <span class="number-done">{{stats.done}}</span> completed
    <span class="word-done">
      {{#pluralize stats.done}}item{{/pluralize}}
    </span>
  </span>{{/if}}
